<p id="notice"><%= notice %></p>
<% columns = @drug_cols %>


<h1>Listing Drugs</h1>

<table id="drugs" class="table table-hover table-drugs text-center datatable">
  <thead>
    <tr>
			<% @drug_cols.each do |col| %>
				<th style="text-align: center"><%= col %></th>
			<% end %>
<!--
     	<th style="text-align: center">TR_TARGET_ID</th>
     	<th style="text-align: center">Target Name</th>
     	<th style="text-align: center">DRUG_ID</th>
     	<th style="text-align: center">Drug Name</th>
-->
      <th style="text-align: center">Tasks</th>
      <th style="text-align: center">Tasks</th>
      <th style="text-align: center">Tasks</th>
    </tr>
	</thead>

  <tbody>
  <% @drugs.each do |drug| %>
      <tr>
				<% @drug_cols.each do |col| %>
					<% if col == "DRUG_NAME" %>
				<td><%= link_to drug[col], drug_path(drug[:id]) %></td>
					<% else %>
						<td><%= drug[col] %></td>
					<% end %>
				<% end %>
        <td><%= link_to 'Show', drug %></td>
        <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
        <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Import Products</h2>

<%= form_tag import_drugs_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>

<%= link_to 'New Drug', new_drug_path %>
